%html
  %head
    %meta{:'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}
  %body
    %table{:border=>'1px solid black'}
      %thead
        %tr
          %td id
          %td Название
          %td Адрес
          %td Сайт
          %td Телефон
          %td E-mail
          %td Принадлежность
      %tbody
        - @data.each do |item|
          %tr
            %td= item.id
            %td= item.name
            %td= item.adres
            %td= item.site
            %td= item.phone
            %td= item.email
            %td= item.segment